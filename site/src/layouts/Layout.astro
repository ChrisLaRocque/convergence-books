---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
const {
	title = "Convergence Books",
	description = "The Convergence Books is a young adult fantasy series by Katherine E. Lewis & Rebecca Lewis. Book One: Incarnation available now!",
	image = "/book-one-wordmark.jpeg",
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:image" content={image} />
		<meta property="og:site_name" content="Convergence Books" />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
	</head>

	<body class="bg-gray-900 text-gray-100">
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
