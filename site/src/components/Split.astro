---
const { h1, subtitle, body, image } = Astro.props;
---

<section class="min-h-[400px] text-white flex justify-center items-center">
	<div class="hero-content max-w-3xl lg:flex">
		<div class="image-wrapper lg:w-[40%] lg:p-12 p-8">
			<img src={image.src} alt={image.alt} />
		</div>
		<div
			class="text-wrapper lg:w-[60%] flex justify-center items-center lg:p-4 p-8"
		>
			<div class="text">
				<h1 class="text-2xl font-extrabold mb-3">
					{h1}
				</h1>
				<strong class="text-sm block mb-2">{subtitle}</strong>
				<p class="text-sm">
					{body}
				</p>
			</div>
		</div>
	</div>
</section>
